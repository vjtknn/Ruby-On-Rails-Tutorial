%div.comments
  =link_to gravatar_for(@micropost.user, size: 50), @micropost.user
  %span.user
    =link_to user_path(@micropost.user) do
      =@micropost.user.name
  %span.content
    =@micropost.content
  %span.timestamp
    Posted:
    =time_ago_in_words(@micropost.created_at)
    ago
    = link_to "delete", @micropost, method: :delete, data: { confirm: "Are you sure?" }


%div.col-md-4
  %h4
    Add comment:
  =render 'comment_form'
%div.col-md-6
  -if@micropost.comments.any?
    %h4
      ="Comments (#{@micropost.comments.count})"
    %ol.comments
      =render @comments
    =will_paginate @comments
