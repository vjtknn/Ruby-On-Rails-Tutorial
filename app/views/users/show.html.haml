- provide(:title, @user.name)
%div.row
  %aside.col-md-4
    %section.user_info
      %h1
        =gravatar_for @user
        = @user.name
  %div.col-md-8
    - if @user.microposts.any?
      %h3
        =@user.microposts.count
      %ol.microposts
        =render @microposts
      = will_paginate @microposts
